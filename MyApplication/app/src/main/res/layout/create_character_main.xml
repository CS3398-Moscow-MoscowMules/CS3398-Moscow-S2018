<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/race"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/classification"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/classification"
                android:layout_marginTop="28dp"
                android:entries="@array/race_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/background"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/alignment"
                android:layout_alignStart="@+id/alignment"
                android:layout_below="@+id/alignment"
                android:layout_marginTop="13dp"
                android:entries="@array/background_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/classification" />

            <Spinner
                android:id="@+id/alignment"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Language"
                android:layout_alignStart="@+id/Language"
                android:layout_below="@+id/Language"
                android:layout_marginTop="15dp"
                android:entries="@array/alignment_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/background" />

            <Spinner
                android:id="@+id/Language"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/armor_spinner"
                android:layout_alignStart="@+id/armor_spinner"
                android:layout_below="@+id/armor_spinner"
                android:layout_marginTop="13dp"
                android:entries="@array/language_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alignment" />

            <Spinner
                android:id="@+id/armor_spinner"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/shield_spinner"
                android:layout_alignStart="@+id/shield_spinner"
                android:layout_below="@+id/shield_spinner"
                android:layout_marginTop="14dp"
                android:entries="@array/armor_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Language" />

            <Spinner
                android:id="@+id/shield_spinner"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/weapons_spinner"
                android:layout_alignStart="@+id/weapons_spinner"
                android:layout_below="@+id/weapons_spinner"
                android:layout_marginTop="15dp"
                android:entries="@array/shield_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/armor_spinner" />

            <Spinner
                android:id="@+id/weapons_spinner"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/classification"
                android:layout_alignStart="@+id/classification"
                android:layout_below="@+id/classification"
                android:layout_marginTop="17dp"
                android:entries="@array/weapons_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shield_spinner" />

            <Spinner
                android:id="@+id/spells"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/race"
                android:layout_alignStart="@+id/race"
                android:layout_below="@+id/race"
                android:layout_marginTop="16dp"
                android:entries="@array/spells_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weapons_spinner" />

            <Spinner
                android:id="@+id/classification"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spells"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:entries="@array/class_arrays"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/race" />



        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>